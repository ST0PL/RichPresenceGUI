<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:ControlsLib.Controls">
    <Style TargetType="{x:Type controls:TimeProgressBar}">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type controls:TimeProgressBar}">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=TimeContext.StartSpan}"
                                       FontSize="{TemplateBinding FontSize}"
                                       Foreground="{TemplateBinding Foreground}"/>
                                <controls:ProgressBar Grid.Column="1"
                                                   Margin="5,0,5,0"
                                                   CornerRadius="{TemplateBinding ProgressBarCornerRadius}"
                                                   Background="{TemplateBinding ProgressBarBackground}"
                                                   BorderBrush="{TemplateBinding ProgressBarBorderBrush}"
                                                   BorderThickness="{TemplateBinding ProgressBarBorderThickness}"
                                                   Foreground="{TemplateBinding ProgressBarForeground}"
                                                   Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=TimeContext.Percents}"
                                                   HorizontalAlignment="Stretch"
                                                   MaxWidth="{TemplateBinding ProgressBarWidth}"
                                                   MaxHeight="{TemplateBinding ProgressBarHeight}"
                                                   Minimum="0"
                                                   Maximum="100"/>
                                <TextBlock Grid.Column="2"
                                       FontSize="{TemplateBinding FontSize}"
                                       Foreground="{TemplateBinding Foreground}"
                                       Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=TimeContext.EndSpan}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

</ResourceDictionary>