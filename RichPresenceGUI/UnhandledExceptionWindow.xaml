<Window x:Class="RichPresenceGUI.UnhandledExceptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RichPresenceGUI"
        xmlns:clib="clr-namespace:ControlsLib.Controls;assembly=ControlsLib"
        xmlns:prop="clr-namespace:ControlsLib.AttachedProperties;assembly=ControlsLib"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Title="UnhandledExceptionWindow"
        WindowStartupLocation="CenterScreen"
        Height="300" Width="500">
    <Border BorderThickness="10"
            BorderBrush="Transparent"
            CornerRadius="10"
            Margin="5"
            Padding="10"
            MouseDown="Border_MouseDown"
            Background="{DynamicResource WindowBackground}"
            UseLayoutRounding="True">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                              RenderingBias="Quality"
                              BlurRadius="10"
                              ShadowDepth="0"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <Border Width="25"
                        Height="25">
                    <Border.Background>
                        <ImageBrush RenderOptions.BitmapScalingMode="HighQuality" 
                                    ImageSource="/Resources/icons/gray.png"/>
                    </Border.Background>
                </Border>
                <Label Style="{DynamicResource Fields_BlockLabelStyle}"
                       Content="Rich presence GUI"
                       Foreground="{DynamicResource BaseTextColor}"
                       FontSize="15"
                       FontWeight="SemiBold"/>
            </StackPanel>
            <clib:TextBox Grid.Row="1"
                          CornerRadius="2"
                          Padding="10"
                          IsReadOnly="True"
                          Style="{StaticResource TextBoxStyle}"
                          Background="{DynamicResource BlockBackground}"
                          VerticalScrollBarVisibility="Auto"
                          TextWrapping="Wrap"
                          Text="{Binding Exception}"
                          FontSize="15"
                          Opacity="1">

            </clib:TextBox>
            <clib:Button Grid.Row="2"
                         Style="{DynamicResource ClassicButtonStyle}"
                         Content="{DynamicResource uew_close}"
                         Padding="15,5,15,5"
                         Margin="0,10,0,0"
                         FontSize="15"
                         CornerRadius="2"
                         HorizontalAlignment="Right" Click="CloseButton_Click"/>
        </Grid>
    </Border>
</Window>
