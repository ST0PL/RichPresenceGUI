<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:clib="clr-namespace:ControlsLib.Controls;assembly=ControlsLib">
    <Style x:Key="TextBoxStyle" TargetType="{x:Type clib:TextBox}" BasedOn="{StaticResource {x:Type clib:TextBox}}">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Background" Value="{DynamicResource InputBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource BaseTextColor}"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="TitleFontWeight" Value="SemiBold"/>
        <Setter Property="TitleFontSize" Value="15"/>
        <Setter Property="TitleForeground" Value="{DynamicResource BaseTextColor}"/>
        <Setter Property="TitleOpacity" Value="0.5"/>
        <Setter Property="Padding" Value="5,0,5,0"/>
    </Style>
</ResourceDictionary>