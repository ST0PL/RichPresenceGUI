<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:clib="clr-namespace:ControlsLib.Controls;assembly=ControlsLib"
                    xmlns:prop="clr-namespace:ControlsLib.AttachedProperties;assembly=ControlsLib">
    <Style x:Key="LocaleComboBoxStyle" TargetType="{x:Type clib:ComboBox}" BasedOn="{StaticResource ComboBoxStyle}">
        <Setter Property="PopupMargin" Value="5"/>
        <Setter Property="PopupPadding" Value="0,5,0,5"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="PopupCornerRadius" Value="12"/>
        <Setter Property="ItemsCornerRadius" Value="8"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Margin" Value="30,10,30,5"/>
        <Setter Property="PopupMaxHeight" Value="125"/>
        <Setter Property="prop:ScrollViewerHelper.ScrollBarThumbCornerRadius" Value="3"/>
    </Style>
</ResourceDictionary>