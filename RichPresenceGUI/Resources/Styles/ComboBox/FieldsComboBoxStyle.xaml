<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:clib="clr-namespace:ControlsLib.Controls;assembly=ControlsLib">
    <Style x:Key="FieldsComboBoxStyle" TargetType="{x:Type clib:ComboBox}" BasedOn="{StaticResource ComboBoxStyle}">
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="PopupCornerRadius" Value="5"/>
        <Setter Property="ItemsCornerRadius" Value="5"/>
        <Setter Property="PopupMargin" Value="5,10,5,5"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Height" Value="27"/>
    </Style>
</ResourceDictionary>