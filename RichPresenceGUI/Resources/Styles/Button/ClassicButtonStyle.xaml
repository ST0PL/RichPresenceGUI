<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:clib="clr-namespace:ControlsLib.Controls;assembly=ControlsLib">
    <Style x:Key="ClassicButtonStyle" TargetType="{x:Type clib:Button}" BasedOn="{StaticResource {x:Type clib:Button}}">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="{DynamicResource ClassicButtonBackground}"/>
        <Setter Property="HoverBackgroundColor" Value="{DynamicResource HoverClassicButtonBackground}"/>
        <Setter Property="ClickBackgroundColor" Value="{DynamicResource ClickClassicButtonBackground}"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
</ResourceDictionary>