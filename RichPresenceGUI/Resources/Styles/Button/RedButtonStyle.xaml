<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:clib="clr-namespace:ControlsLib.Controls;assembly=ControlsLib">
    <Style x:Key="RedButtonStyle" TargetType="{x:Type clib:Button}" BasedOn="{StaticResource ClassicButtonStyle}">
        <Setter Property="Background" Value="{DynamicResource RedButtonBackground}"/>
        <Setter Property="HoverBackgroundColor" Value="{DynamicResource HoverRedButtonBackground}"/>
        <Setter Property="ClickBackgroundColor" Value="{DynamicResource ClickRedButtonBackground}"/>
    </Style>
</ResourceDictionary>