<UserControl x:Class="RichPresenceGUI.Views.DebugView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cc="clr-namespace:RichPresenceGUI.CustomControls"
             xmlns:local="clr-namespace:RichPresenceGUI.Views"
             xmlns:selectors="clr-namespace:RichPresenceGUI.DataTemplateSelectors"
             xmlns:clib="clr-namespace:ControlsLib.Controls;assembly=ControlsLib"
             xmlns:prop="clr-namespace:ControlsLib.AttachedProperties;assembly=ControlsLib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.RenderTransform>
        <TranslateTransform X="0" Y="0"/>
    </UserControl.RenderTransform>
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.Y)"
                                     From="20"
                                     To="0"
                                     Duration="0:0:0.2"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Background="{DynamicResource ConsoleBackground}"
                Margin="10"
                Padding="5"
                CornerRadius="10"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch">
            <clib:ListView Style="{StaticResource ListViewStyle}"
                           prop:ListBoxBehaviour.AllowCopy="True"
                           x:Name="logsList"
                           ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                           CanSelect="True"
                           ItemsSource="{Binding Messages}">
                <clib:ListView.ItemTemplateSelector>
                    <selectors:LogTemplateSelector TraceTemplate="{StaticResource logger_trace_template}"
                                                   InfoTemplate="{StaticResource logger_info_template}"
                                                   WarningTemplate="{StaticResource logger_warning_template}"
                                                   ErrorTemplate="{StaticResource logger_error_template}"/>
                </clib:ListView.ItemTemplateSelector>
        </clib:ListView>
        </Border>
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <clib:Button Style="{DynamicResource ClassicButtonStyle}"
                         Margin="0,0,10,10"
                         CornerRadius="10"
                         HorizontalAlignment="Right"
                         Height="40"
                         Padding="5"
                         Content="{DynamicResource debug_clear}"
                         FontSize="15"
                         Command="{Binding ClearCommand}"/>
            <clib:Button Style="{DynamicResource ClassicButtonStyle}"
                         Margin="0,0,10,10"
                         CornerRadius="10"
                         HorizontalAlignment="Right"
                         Height="40"
                         Padding="5"
                         Content="{DynamicResource debug_save}"
                         FontSize="15"
                         Command="{Binding SaveToFileCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
