<Window x:Class="RichPresenceGUI.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RichPresenceGUI"
        xmlns:clib="clr-namespace:ControlsLib.Controls;assembly=ControlsLib"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        Height="250" Width="550">
    <Border Background="{DynamicResource WindowBackground}"
            Width="500"
            Height="200"
            Name="mainBorder"
            CornerRadius="10"
            UseLayoutRounding="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30"
                              Opacity="0.7"
                              ShadowDepth="0"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Background="{DynamicResource WindowTitleBackground}"
                    MouseDown="Border_MouseDown"
                    CornerRadius="10,10,0,0">
                <clib:Button Style="{StaticResource RedButtonStyle}"
                             Click="CloseButton_Click"
                             Margin="5"
                             Height="20"
                             CornerRadius="5"
                             HorizontalAlignment="Right"
                             Width="30"/>
            </Border>
            <Label Grid.Row="1"
                   Content="{Binding Type, Converter={StaticResource enumLocaleConverter}, Mode=OneWay}"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Center"
                   FontWeight="SemiBold"
                   Opacity="0.8"
                   FontSize="20"
                   Foreground="{DynamicResource BaseTextColor}"/>
            <clib:TextBox Style="{StaticResource TextBoxStyle}"
                          Grid.Row="2"
                          VerticalAlignment="Center"
                          Padding="10"
                          Margin="5,0,5,5"
                          HorizontalAlignment="Center"
                          VerticalScrollBarVisibility="Auto"
                          IsReadOnly="True"
                          TextWrapping="Wrap"
                          Text="{Binding Message, Mode=OneWay}"/>
        </Grid>
    </Border>
</Window>
