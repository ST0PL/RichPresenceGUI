<Window x:Class="RichPresenceGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:cc="clr-namespace:RichPresenceGUI.CustomControls"
        xmlns:local="clr-namespace:RichPresenceGUI"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:clib="clr-namespace:ControlsLib.Controls;assembly=ControlsLib"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        Title="Rich Presence GUI"
        MinHeight="525"
        MinWidth="590"
        MaxWidth="1315"
        MaxHeight="680"
        Width="1315"
        Height="680"
        StateChanged="Window_StateChanged">
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome/>
    </shell:WindowChrome.WindowChrome>
    <Border  x:Name="mainBorder"
            Background="{DynamicResource WindowBackground}"
            CornerRadius="10">
        <Grid Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <tb:TaskbarIcon x:Name="notifyIcon"
                            IconSource="/Resources/Icons/favicon.ico"
                            Visibility="Visible"
                            ToolTipText="Discord Rich Presence GUI"
                            MenuActivation="LeftOrRightClick"
                            PopupActivation="RightClick"
                            TrayMouseDoubleClick="TrayDoubleClick">
                <tb:TaskbarIcon.TrayPopup>
                    <Border Background="{DynamicResource WindowBackground}"
                            BorderThickness="2"
                            BorderBrush="#95959c"
                            CornerRadius="10"
                            Padding="10">
                        <StackPanel>
                            <clib:Button x:Name="topButton"
                                         Style="{DynamicResource TrayButtonStyle}"
                                         Click="TrayTopButton_Clicked"/>
                            <clib:Button Style="{DynamicResource TrayButtonStyle}"
                                         Click="TrayCloseButton_Clicked"
                                         Margin="0,5,0,0"
                                         Content="{DynamicResource tb_quit}"/>
                        </StackPanel>
                    </Border>
                </tb:TaskbarIcon.TrayPopup>
            </tb:TaskbarIcon>
            <Border Background="{DynamicResource WindowTitleBackground}"
                    MouseDown="Border_MouseDown"
                    CornerRadius="10,10,0,0"
                    Height="50"
                    shell:WindowChrome.IsHitTestVisibleInChrome="True">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <clib:Button Width="28"
                                     Height="28"
                                     Padding="0"
                                     Cursor="Hand"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     HoverBackgroundColor="Transparent"
                                     CornerRadius="3"
                                     Margin="10,0,0,0"
                                     ToolTip="{DynamicResource mw_repositoryTooltip}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:LaunchUriOrFileAction Path="https://github.com/ST0PL/RichPresenceGUI"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <Image RenderOptions.BitmapScalingMode="HighQuality"
                                   Source="/Resources/Icons/gray.png"/>

                        </clib:Button>
                        <Label Content="Rich Presence GUI"
                               VerticalAlignment="Center"
                               x:Name="windowTitle"
                               FontSize="15"
                               Foreground="{DynamicResource BaseTextColor}"
                               Opacity="0.8"
                               FontWeight="SemiBold"/>
                        <Border Background="{DynamicResource BlockBackground}"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Margin="10,5,0,5"
                                Padding="5,5,5,5"
                                CornerRadius="5"
                                Visibility="{Binding ElementName=displayName, Path=Content, Converter={StaticResource nullOrEmptyVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <Border CornerRadius="5"
                                        x:Name="avatar"
                                        Width="30"
                                        Height="30"
                                        Visibility="{Binding ElementName=avatar, Path=Background.(ImageBrush.ImageSource), Converter={StaticResource nullOrEmptyVisibilityConverter}}">
                                    <Border.Background>
                                        <ImageBrush />
                                    </Border.Background>
                                </Border>
                                <Label x:Name="displayName"
                                       Content=""
                                       FontSize="14"
                                       Foreground="{DynamicResource BaseTextColor}"
                                       Opacity="0.8"
                                       FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,0,10,0">
                        <clib:Button x:Name="updateButton"
                                     Style="{DynamicResource ClassicButtonStyle}"
                                     Content="{DynamicResource mw_updateAvailable}"
                                     Visibility="Collapsed"
                                     CornerRadius="10"
                                     Padding="10,0,10,0"
                                     Margin="5,10,50,10"
                                     FontSize="15">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:LaunchUriOrFileAction x:Name="updateInteraction" Path=""/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </clib:Button>
                        <clib:Button Style="{DynamicResource OrangeButtonStyle}"
                                     Width="30"
                                     Height="20"
                                     CornerRadius="5"
                                     Click="MinimizeButton_Click">
                        </clib:Button>
                        <clib:Button Style="{DynamicResource RedButtonStyle}"
                                     Margin="10,0,0,0"
                                     Width="30"
                                     Height="20"
                                     CornerRadius="5"
                                     Click="CloseButton_Click">
                        </clib:Button>
                    </StackPanel>
                </Grid>
            </Border>
            <ContentControl Grid.Row="1"
                            x:Name="contentControl">
            </ContentControl>
        </Grid>
    </Border>
</Window>
