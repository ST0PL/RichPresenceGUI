<Window x:Class="RichPresenceGUI.SaveTemplateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RichPresenceGUI"
        xmlns:cc="clr-namespace:RichPresenceGUI.CustomControls"
        xmlns:clib="clr-namespace:ControlsLib.Controls;assembly=ControlsLib"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Title="Save template"
        Height="240"
        Width="550">
    <Border x:Name="mainBorder"
            Width="500"
            Height="200"
            Background="{DynamicResource WindowBackground}"
            CornerRadius="10"
            UseLayoutRounding="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30"
                              Opacity="0.7"
                              ShadowDepth="0"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border Background="{DynamicResource WindowTitleBackground}"
                    CornerRadius="10,10,0,0"
                    MouseDown="Border_MouseDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="{DynamicResource stw_title}"
                           Margin="10,0,0,0"
                           FontSize="15"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource BaseTextColor}"
                           Opacity="0.8"/>
                    <clib:Button Style="{StaticResource RedButtonStyle}"
                                 Click="CloseButton_Click"
                                 Margin="5"
                                 Height="20"
                                 CornerRadius="5"
                                 Grid.Column="1"
                                 HorizontalAlignment="Right"
                                 Width="30"/>
                </Grid>
            </Border>
            <StackPanel Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                <clib:TextBox Style="{StaticResource TextBoxStyle}"
                              HorizontalAlignment="Center"
                              Width="300"
                              Padding="5"
                              Title="{DynamicResource stw_templateName}"
                              TitleFontSize="20"
                              TitleOpacity="0.8"
                              Text="{Binding TemplateName, UpdateSourceTrigger=PropertyChanged}"
                              VerticalContentAlignment="Center"/>
                <Label Content=".json"
                       VerticalAlignment="Bottom"
                       FontSize="20"
                       Foreground="{DynamicResource BaseTextColor}"
                       Opacity="0.8"/>
            </StackPanel>
            <clib:Button Grid.Row="2"
                         Cursor="Hand"
                         Command="{Binding SaveTemplateCommand}"
                         Margin="10"
                         HorizontalAlignment="Right"
                         Padding="20,5,20,6"
                         Content="{DynamicResource stw_saveButton}"
                         FontSize="20"
                         FontWeight="SemiBold"
                         BorderThickness="0"
                         Background="{DynamicResource WindowActionButtonBackground}"
                         HoverBackgroundColor="{DynamicResource HoverWindowActionButtonBackground}"
                         ClickBackgroundColor="{DynamicResource ClickWindowActionButtonBackground}"
                         Foreground="{DynamicResource WindowActionButtonContentColor}"
                         CornerRadius="5"/>
        </Grid>
    </Border>
</Window>
